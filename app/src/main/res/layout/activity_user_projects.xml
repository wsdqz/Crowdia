<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!-- заголовок страницы и информация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_projects_title"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/projectsCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/projects_count"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- список проектов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userProjectsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"/>

    <!-- сообщение когда нет проектов -->
    <LinearLayout
        android:id="@+id/emptyProjectsView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_add"
            app:tint="@color/colorPrimaryLight"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/noProjectsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_projects_yet"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_first_project"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/createProjectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_project"
            android:layout_marginTop="16dp"
            style="@style/AppButtonStyle"/>
    </LinearLayout>

</LinearLayout> 