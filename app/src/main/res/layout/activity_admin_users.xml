<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!--заголовок страницы и информация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_users_title"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/usersCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/users_count"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_users_description"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@color/colorTextSecondary"/>
    </LinearLayout>

    <!-- список пользователей -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminUsersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"/>

    <!-- сообщение когда нет пользователей -->
    <LinearLayout
        android:id="@+id/emptyUsersView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/colorPrimaryLight"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_users_found"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</LinearLayout> 